<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event.Virtual.VirtualEventFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_virtual_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/open_options_btn_virtual"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        android:background="@drawable/purple_circle"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"/>

    <Button
        android:id="@+id/btn_option_1_virtual"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/purple_circle"
        android:drawableStart="@drawable/ic_people"
        android:paddingStart="13dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btn_option_2_virtual"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/purple_circle"
        android:drawableStart="@drawable/ic_chat"
        android:paddingStart="13dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_drawer_menu_virtual"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:background="@drawable/purple_circle"
        android:drawableStart="@drawable/ic_menu"
        android:paddingStart="13dp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

</FrameLayout>