<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HomePage.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/event_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/project_font"
                    android:text="Event Name + pic"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hobby_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Hobby "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/hobby_value"
                        android:layout_width="187dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="hobby_val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Date "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/date_value"
                        android:layout_width="187dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="date_val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Time "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time_value"
                        android:layout_width="187dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="time_val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/duration_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Duration "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/duration_value"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="duration_val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/platform_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/platform_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Platform: "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/platform_value"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="Platform_val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/location_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Location "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/link_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Link "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/linkORlocation_value"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/num_participants_text"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Participants "
                        android:textColor="@color/quantum_grey600"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/num_participants_value"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="12dp"
                        android:text="val "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Description "
                    android:textColor="@color/quantum_grey600"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/description_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:editable="false"
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:text="decription_val"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <Button
                    android:id="@+id/join_event_button"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/custom_btn"
                    android:backgroundTint="@color/purple"
                    android:text="Join"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout>